{
    "required": ["datetime", "zipcode", "city", "state", "country", "type", "priority", "sender"],
    "properties": {
        "datetime": {
            "required": true,
            "type": "datetime",
            "description": "When are you sending this message?",
            "example": "2020-03-04 12:45:32" 
        },
        "zipcode": {
            "required": true,
            "type": "string",
            "example": "10001"
        },
        "city": {
            "required": true,
            "type": "string",
            "example": "New York City"
        },
        "state": {
            "required": true,
            "type": "string",
            "example": "New York"
        },
        "country": {
            "required": true,
            "type": "string",
            "example": "USA"
        },
        "type": {
            "required": true,
            "type": "string",
            "description": "What platform are you sending this message from?",
            "example": "Slack"
        },
        "description": {
            "required": true,
            "type": "string",
            "description": "What is your message?",
            "example": "Smoke in the building"
        },
        "priority": {
            "required": true,
            "type": "string",
            "values": ["High", "Medium", "Low"],
            "description": "What is the priority of your message?",
            "example": "Medium"
        },
        "sender": {
            "required": true,
            "type": "string",
            "description": "Who is sending the message?",
            "example": "Messaging API Server"
        }
    }
}