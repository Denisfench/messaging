{
	"type": "modal",
	"callback_id": "filter_alerts",
	"title": {
		"type": "plain_text",
		"text": "SOC-NET: Filter Alerts",
		"emoji": true
	},
	"submit": {
		"type": "plain_text",
		"text": "Submit",
		"emoji": true
	},
	"close": {
		"type": "plain_text",
		"text": "Cancel",
		"emoji": true
	},
	"blocks": [
		{
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"action_id": "event_type",
				"placeholder": {
					"type": "plain_text",
					"text": "e.g. Fire"
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Event Type"
			},
			"optional": true
		},
		{
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"action_id": "event_severity",
				"placeholder": {
					"type": "plain_text",
					"text": "e.g. Low"
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Severity"
			},
			"optional": true
		},
		{
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"action_id": "event_state",
				"placeholder": {
					"type": "plain_text",
					"text": "e.g. New York"
				}
			},
			"label": {
				"type": "plain_text",
				"text": "State/Province/Region"
			},
			"optional": true
		},
		{
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"action_id": "event_country",
				"placeholder": {
					"type": "plain_text",
					"text": "e.g. USA"
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Country"
			},
			"optional": true
		},
		{
			"type": "input",
			"element": {
				"type": "datepicker",
				"action_id": "since_date",
				"placeholder": {
					"type": "plain_text",
					"text": "Select a date"
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Since Date"
			},
			"optional": true
		},
		{
			"type": "input",
			"label": {
				"type": "plain_text",
				"text": "Active Status"
			},
			"optional": true,
			"element": {
				"type": "static_select",
				"placeholder": {
					"type": "plain_text",
					"text": "Please select a status"
				},
				"action_id": "active",
				"options": [
					{
						"text": {
							"type": "plain_text",
							"text": "Active"
						},
						"value": "y"
					},
					{
						"text": {
							"type": "plain_text",
							"text": "Not Active"
						},
						"value": "n"
					}
				]
			}
		}
	]
}