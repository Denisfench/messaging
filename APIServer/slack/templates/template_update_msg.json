{
	"type": "modal",
	"callback_id": "update_msg",
	"title": {
		"type": "plain_text",
		"text": "SOC-NET: Update an Msg"
	},
	"submit": {
		"type": "plain_text",
		"text": "Submit"
	},
	"close": {
		"type": "plain_text",
		"text": "Cancel"
	},
	"blocks": [
		{
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"action_id": "msg_id",
				"placeholder": {
					"type": "plain_text",
					"text": "What is the msg id?"
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Msg ID"
			},
            "optional": false
		},
        {
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"action_id": "type",
				"placeholder": {
					"type": "plain_text",
					"text": "Leave this field blank if you do not want to change it"
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Event Type"
			},
            "optional": true
		},
		{
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"action_id": "description",
				"multiline": true,
				"placeholder": {
					"type": "plain_text",
					"text": "Leave this field blank if you do not want to change it"
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Description"
			},
            "optional": true
		},
		{
			"type": "input",
			"element": {
				"type": "static_select",
				"action_id": "priority",
				"placeholder": {
					"type": "plain_text",
					"text": "Leave this field blank if you do not want to change it"
				},
				"options": [
					{
						"value": "low",
						"text": {
							"type": "plain_text",
							"text": "Low"
						}
					},
					{
						"value": "medium",
						"text": {
							"type": "plain_text",
							"text": "Medium"
						}
					},
					{
						"value": "high",
						"text": {
							"type": "plain_text",
							"text": "High"
						}
					}
				]
			},
			"label": {
				"type": "plain_text",
				"text": "Priority"
			},
            "optional": true
		},
		{
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"action_id": "city",
				"placeholder": {
					"type": "plain_text",
					"text": "Leave this field blank if you do not want to change it"
				}
			},
			"label": {
				"type": "plain_text",
				"text": "City"
			},
            "optional": true
		},
		{
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"action_id": "state",
				"placeholder": {
					"type": "plain_text",
					"text": "Leave this field blank if you do not want to change it"
				}
			},
			"label": {
				"type": "plain_text",
				"text": "State/Province/Region"
			},
            "optional": true
		},
		{
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"action_id": "country",
				"placeholder": {
					"type": "plain_text",
					"text": "Leave this field blank if you do not want to change it"
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Country"
			},
            "optional": true
		},
		{
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"action_id": "zipcode",
				"placeholder": {
					"type": "plain_text",
					"text": "Leave this field blank if you do not want to change it"
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Zipcode/Postal Code"
			},
            "optional": true
		},
		{
			"type": "input",
			"label": {
				"type": "plain_text",
				"text": "Active Status"
			},
			"optional": true,
			"element": {
				"type": "static_select",
				"placeholder": {
					"type": "plain_text",
					"text": "Please select a status"
				},
				"action_id": "active",
				"options": [
					{
						"text": {
							"type": "plain_text",
							"text": "Active"
						},
						"value": "y"
					},
					{
						"text": {
							"type": "plain_text",
							"text": "Not Active"
						},
						"value": "n"
					}
				]
			}
		},
		{
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"action_id": "sender",
				"placeholder": {
					"type": "plain_text",
					"text": "Please provide your name and/or organization (e.g. NYU)"
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Sender's Name and/or Organization"
			},
            "optional": false
		}
	]
}
